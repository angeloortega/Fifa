            @Html.LabelFor(model => model.minuto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.minuto, new SelectList(Enumerable.Range(0, 91)))
                @Html.ValidationMessageFor(model => model.minuto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.usuarioCreacion, htmlAttributes: new { @class = "control-label col-md-2" })
