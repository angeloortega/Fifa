@model Fifa19.Models.TorneoXClub
@{
    ViewBag.Title = "AddTeam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Team</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idCompeticion)
    @Html.HiddenFor(model => model.anho)
    <div class="form-horizontal">
        <h4>Partido</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.idClub, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idClub", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idClub, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.usuarioCreacion,"Usuario de Creacion", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.usuarioCreacion,new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usuarioCreacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar Equipo" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@Html.ActionLink("Back to Index", "Index")
