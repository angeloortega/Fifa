@model IEnumerable<Fifa19.Models.Arbitro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form asp-controller="Arbitro" asp-action="Index">
    <p>
        Busqueda: <input type="text" name="search">
        <input type="submit" value="Filter" />
    </p>
</form>

<div style="height: 550px; overflow: auto;">
    <table class="table">
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Categoria
            </th>
            <th>
                Usuario de Creacion
            </th>
            <th>
                Usuario de Modificacion
            </th>
            <th>
                Fecha de Creacion
            </th>
            <th>
                Fecha de Modificacion
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoria)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.usuarioCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usuarioModificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fchCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fchModificacion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idArbitro }) |
                @Html.ActionLink("Details", "Details", new { id = item.idArbitro }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idArbitro })
            </td>
        </tr>
        }

    </table>
</div>