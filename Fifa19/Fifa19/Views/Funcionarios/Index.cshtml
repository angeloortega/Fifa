@model IEnumerable<Fifa19.Models.Funcionario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form asp-controller="Funcionario" asp-action="Index">
    <p>
        Title: <input type="text" name="search">
        <input type="submit" value="Filter" />
    </p>
</form>

<div style="height: 550px; overflow: auto;">
    <table class="table">
        <tr>
            <th>
                Foto
            </th>
            <th>
                Nombre
            </th>
            <th>
                ID De Club Actual
            </th>

            <th>
                Fecha de Nacimiento
            </th>

            <th>
                Usuario de Creacion
            </th>
            <th>
                Usuario de Modificacion
            </th>
            <th>
                Fecha de Creacion
            </th>
            <th>
                Fecha de Modificacion
            </th>

            <th>
            </th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="@Url.Content("~/Resources/" + item.foto)" alt="IMAGES" width="75" height="75" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fchNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idClub)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usuarioCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usuarioModificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fchCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fchModificacion)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.codigoFuncionario }) |
                @Html.ActionLink("Details", "Details", new { id = item.codigoFuncionario }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.codigoFuncionario })
            </td>
        </tr>
        }

    </table>
</div>