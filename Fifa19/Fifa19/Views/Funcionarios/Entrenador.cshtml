@model Fifa19.Models.Entrenador

@{
    ViewBag.Title = "Entrenador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar Como Entrenador</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Entrenador</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.codigoFuncionario)
    @Html.HiddenFor(model => model.nombre)

    <div class="form-group">
        @Html.LabelFor(model => model.fchInicioCarrera, "Fecha de Inico de Carrera", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.fchInicioCarrera, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.fchInicioCarrera, "Por favor inserte una fecha valida", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.usuarioCreacion, "Usuario de Creacion", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.usuarioCreacion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.usuarioCreacion, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Entrenador" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

