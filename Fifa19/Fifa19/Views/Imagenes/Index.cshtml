@model IEnumerable<Fifa19.Models.Imagenes>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create") | @Html.ActionLink("Create Video", "CreateVideo")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image_byte)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            <img src="data:image;base64,@System.Convert.ToBase64String(item.image_byte)" width="80" height="80" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.nombre }) |
            @Html.ActionLink("Details", "Details", new { id=item.nombre }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.nombre })
        </td>
    </tr>
}

</table>
